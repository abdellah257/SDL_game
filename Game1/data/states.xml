<?xml version="1.0" ?>
<STATES>

<!--The Menu State-->
<MENU>
<TEXTURES>
  <texture filename="play11.png" ID="playbutton"/>
  <texture filename="exit11.png" ID="exitbutton"/>
</TEXTURES>

<OBJECTS>
  <object type="MenuButton" x="200" y="200" width="233" 
  height="68" textureID="playbutton"/>
  <object type="MenuButton" x="100" y="300" width="233" 
  height="68" textureID="exitbutton"/>
</OBJECTS>
</MENU>

<!--The Play State-->
<PLAY>
<TEXTURES>
  <texture filename="play11.png" ID="player"/>
</TEXTURES>

<OBJECTS>
  <object type="Player" x="0" y="0" width="128" 
  height="130" textureID="player"/>
  <object type="Enemy" x="300" y="100" width="128" 
  height="130" textureID="player"/>
  <object type="Enemy" x="300" y="200" width="128" 
  height="130" textureID="player"/>
  <object type="Enemy" x="300" y="300" width="128" 
  height="130" textureID="player"/>
  <object type="Enemy" x="300" y="400" width="128" 
  height="130" textureID="player"/>
</OBJECTS>
</PLAY>

<!-- The Game Over State -->
<GAMEOVER>
<TEXTURES>
  <texture filename="play11.png" ID="playbutton"/>
  <texture filename="menu11.png" ID="exitbutton"/>
</TEXTURES>

<OBJECTS>
  <object type="MenuButton" x="200" y="200" width="233" 
  height="68" textureID="playbutton"/>
  <object type="MenuButton" x="100" y="300" width="233" 
  height="68" textureID="menubutton"/>
</OBJECTS>
</GAMEOVER>
</STATES>